{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/generate-pdf", "dest": "api/server.js" },
    { "src": "/print-badge", "dest": "api/server.js" },
    { "src": "/", "dest": "api/server.js" }
  ],
  "installCommand": "npm install && npx puppeteer install",
  "env": {
    "PUPPETEER_EXECUTABLE_PATH": "./node_modules/puppeteer/.local-chromium"
  }
}
